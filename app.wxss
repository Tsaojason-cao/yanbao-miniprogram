/**app.wxss - Sanmu AI 全局样式 **/

/* ==================== 全局变量 ==================== */
page {
  --primary-color: #2D5F3F;
  --primary-dark: #1F4529;
  --bg-primary: #FFFFFF;
  --bg-secondary: #F9FAFB;
  --text-primary: #1F2937;
  --text-secondary: #6B7280;
  --border-light: #E5E7EB;
  --spacing-sm: 16rpx;
  --spacing-md: 24rpx;
  --spacing-lg: 32rpx;
  --radius-md: 16rpx;
  --radius-lg: 24rpx;
  --radius-xl: 48rpx;
  --shadow-md: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  background-color: var(--bg-secondary);
  font-family: -apple-system, BlinkMacSystemFont, "PingFang SC", "Microsoft YaHei", sans-serif;
}

/* ==================== 容器 ==================== */
.container {
  min-height: 100vh;
  background: var(--bg-secondary);
}

/* ==================== 卡片 ==================== */
.card {
  background: var(--bg-primary);
  border-radius: var(--radius-lg);
  padding: var(--spacing-lg);
  box-shadow: var(--shadow-md);
  margin-bottom: var(--spacing-md);
}

/* ==================== 按钮 ==================== */
.btn-primary {
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%);
  color: #FFFFFF;
  border-radius: var(--radius-xl);
  padding: 24rpx 48rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
}

.btn-primary::after {
  border: none;
}

.btn-secondary {
  background: var(--bg-primary);
  color: var(--primary-color);
  border: 2rpx solid var(--primary-color);
  border-radius: var(--radius-xl);
  padding: 24rpx 48rpx;
  font-size: 32rpx;
  font-weight: 600;
}

.btn-secondary::after {
  border: none;
}

/* ==================== 文本 ==================== */
.title {
  font-size: 48rpx;
  font-weight: 700;
  color: var(--text-primary);
  margin-bottom: 16rpx;
}

.subtitle {
  font-size: 28rpx;
  color: var(--text-secondary);
  margin-bottom: var(--spacing-lg);
}

/* ==================== 标签 ==================== */
.tag {
  display: inline-block;
  padding: 8rpx 24rpx;
  border-radius: 24rpx;
  font-size: 24rpx;
  margin-right: 16rpx;
}

.tag-primary {
  background: rgba(45, 95, 63, 0.1);
  color: var(--primary-color);
}

/* ==================== 工具类 ==================== */
.flex {
  display: flex;
}

.flex-between {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.flex-center {
  display: flex;
  align-items: center;
  justify-content: center;
}

.gap-sm {
  gap: var(--spacing-sm);
}

.gap-md {
  gap: var(--spacing-md);
}
