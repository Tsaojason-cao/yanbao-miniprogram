/* settings.wxss */
.container {
  min-height: 100vh;
  background: #F9FAFB;
  padding-bottom: 40rpx;
}

.user-section {
  display: flex;
  align-items: center;
  gap: 24rpx;
  padding: 60rpx 32rpx 32rpx;
  background: linear-gradient(135deg, #2D5F3F 0%, #1F4529 100%);
  color: white;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
}

.membership-card {
  margin: -40rpx 32rpx 32rpx;
  padding: 32rpx;
  background: white;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
}

.settings-item {
  display: flex;
  justify-content: space-between;
  padding: 32rpx;
  border-bottom: 1rpx solid #F3F4F6;
}
