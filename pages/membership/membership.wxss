/* membership.wxss - 优化版 */
.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #F9FAFB 0%, #FFFFFF 100%);
  padding-bottom: 40rpx;
}

/* ==================== Header ==================== */
.header {
  padding: 80rpx 32rpx 60rpx;
  text-align: center;
  background: linear-gradient(135deg, #2D5F3F 0%, #1F4529 100%);
  color: white;
  position: relative;
  overflow: hidden;
}

.header::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -20%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.1) 0%, transparent 70%);
}

.header-title {
  font-size: 56rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
  position: relative;
  z-index: 1;
}

.header-subtitle {
  font-size: 28rpx;
  opacity: 0.9;
  position: relative;
  z-index: 1;
}

/* ==================== Current Membership ==================== */
.current-membership {
  margin: -40rpx 32rpx 40rpx;
  padding: 40rpx;
  background: white;
  border-radius: 32rpx;
  box-shadow: 0 16rpx 48rpx rgba(0, 0, 0, 0.12);
  text-align: center;
  position: relative;
}

.current-badge {
  display: inline-flex;
  align-items: center;
  gap: 16rpx;
  padding: 20rpx 40rpx;
  border-radius: 48rpx;
  color: white;
  font-weight: bold;
  font-size: 36rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
}

.badge-icon {
  font-size: 48rpx;
}

.current-expire {
  margin-top: 20rpx;
  font-size: 24rpx;
  color: #6B7280;
}

/* ==================== Tiers Section ==================== */
.tiers-section {
  padding: 0 32rpx;
}

.tier-card {
  margin-bottom: 32rpx;
  padding: 40rpx;
  background: white;
  border-radius: 32rpx;
  border: 3rpx solid #E5E7EB;
  position: relative;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.tier-card.active {
  border-color: #2D5F3F;
  box-shadow: 0 16rpx 48rpx rgba(45, 95, 63, 0.2);
  transform: translateY(-4rpx);
}

.tier-card-pro {
  border-color: #2D5F3F;
  border-width: 3rpx;
}

.tier-card-master {
  border-color: #1F2937;
  border-width: 3rpx;
  background: linear-gradient(135deg, #FFFFFF 0%, #F9FAFB 100%);
}

.tier-badge {
  position: absolute;
  top: -16rpx;
  right: 40rpx;
  padding: 12rpx 32rpx;
  background: linear-gradient(135deg, #2D5F3F 0%, #1F4529 100%);
  color: white;
  font-size: 24rpx;
  border-radius: 32rpx;
  font-weight: bold;
  box-shadow: 0 4rpx 12rpx rgba(45, 95, 63, 0.3);
}

.tier-badge-master {
  background: linear-gradient(135deg, #1F2937 0%, #374151 100%);
  box-shadow: 0 4rpx 12rpx rgba(31, 41, 55, 0.3);
}

.tier-header {
  display: flex;
  align-items: center;
  gap: 24rpx;
  margin-bottom: 32rpx;
  padding-bottom: 32rpx;
  border-bottom: 2rpx solid #F3F4F6;
}

.tier-icon {
  font-size: 80rpx;
  filter: drop-shadow(0 4rpx 8rpx rgba(0, 0, 0, 0.1));
}

.tier-info {
  flex: 1;
}

.tier-name {
  font-size: 40rpx;
  font-weight: bold;
  color: #1F2937;
  margin-bottom: 12rpx;
  letter-spacing: 0.5rpx;
}

.tier-price {
  font-size: 48rpx;
  font-weight: bold;
  color: #2D5F3F;
  letter-spacing: -1rpx;
}

.price-unit {
  font-size: 28rpx;
  font-weight: normal;
  color: #6B7280;
  margin-left: 4rpx;
}

.tier-features {
  margin-bottom: 32rpx;
}

.feature-item {
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
  padding: 16rpx 0;
  font-size: 28rpx;
  color: #4B5563;
  line-height: 1.6;
}

.feature-icon {
  color: #2D5F3F;
  font-weight: bold;
  font-size: 32rpx;
  margin-top: 2rpx;
  flex-shrink: 0;
}

.tier-btn {
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.tier-btn::after {
  border: none;
}

.tier-btn-free {
  background: #F3F4F6;
  color: #9CA3AF;
}

.tier-btn-pro {
  background: linear-gradient(135deg, #2D5F3F 0%, #1F4529 100%);
  color: white;
  box-shadow: 0 8rpx 24rpx rgba(45, 95, 63, 0.3);
}

.tier-btn-pro:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(45, 95, 63, 0.2);
}

.tier-btn-master {
  background: linear-gradient(135deg, #1F2937 0%, #374151 100%);
  color: white;
  box-shadow: 0 8rpx 24rpx rgba(31, 41, 55, 0.3);
}

.tier-btn-master:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(31, 41, 55, 0.2);
}

/* ==================== Comparison Section ==================== */
.comparison-section {
  padding: 60rpx 32rpx;
}

.section-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #1F2937;
  margin-bottom: 32rpx;
  text-align: center;
}

.comparison-table {
  background: white;
  border-radius: 32rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
}

.comparison-row {
  display: flex;
  border-bottom: 2rpx solid #F3F4F6;
}

.comparison-row:last-child {
  border-bottom: none;
}

.comparison-header {
  background: linear-gradient(135deg, #F9FAFB 0%, #F3F4F6 100%);
  font-weight: bold;
  color: #1F2937;
}

.comparison-cell {
  flex: 1;
  padding: 28rpx 20rpx;
  font-size: 26rpx;
  text-align: center;
  color: #4B5563;
}

.comparison-feature {
  text-align: left;
  font-weight: 600;
  color: #1F2937;
  padding-left: 32rpx;
}

/* ==================== FAQ Section ==================== */
.faq-section {
  padding: 60rpx 32rpx;
}

.faq-item {
  margin-bottom: 20rpx;
  background: white;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.faq-item:active {
  transform: scale(0.99);
}

.faq-question {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 36rpx;
  font-size: 28rpx;
  font-weight: 600;
  color: #1F2937;
}

.faq-arrow {
  font-size: 48rpx;
  color: #9CA3AF;
  transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  font-weight: 300;
}

.faq-arrow.expanded {
  transform: rotate(90deg);
  color: #2D5F3F;
}

.faq-answer {
  max-height: 0;
  overflow: hidden;
  transition: max-height 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  padding: 0 36rpx;
  font-size: 26rpx;
  color: #6B7280;
  line-height: 1.7;
}

.faq-answer.show {
  max-height: 600rpx;
  padding: 0 36rpx 32rpx;
}
