/* membership.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #F9FAFB 0%, #FFFFFF 100%);
  padding-bottom: 40rpx;
}

/* Header */
.header {
  padding: 60rpx 32rpx 40rpx;
  text-align: center;
  background: linear-gradient(135deg, #2D5F3F 0%, #1F4529 100%);
  color: white;
}

.header-title {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.header-subtitle {
  font-size: 28rpx;
  opacity: 0.9;
}

/* Current Membership */
.current-membership {
  margin: -40rpx 32rpx 32rpx;
  padding: 32rpx;
  background: white;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
  text-align: center;
}

.current-badge {
  display: inline-flex;
  align-items: center;
  gap: 12rpx;
  padding: 16rpx 32rpx;
  border-radius: 48rpx;
  color: white;
  font-weight: bold;
  font-size: 32rpx;
}

.badge-icon {
  font-size: 40rpx;
}

.current-expire {
  margin-top: 16rpx;
  font-size: 24rpx;
  color: #6B7280;
}

/* Tiers Section */
.tiers-section {
  padding: 0 32rpx;
}

.tier-card {
  margin-bottom: 24rpx;
  padding: 32rpx;
  background: white;
  border-radius: 24rpx;
  border: 2rpx solid #E5E7EB;
  position: relative;
  transition: all 0.3s;
}

.tier-card.active {
  border-color: #2D5F3F;
  box-shadow: 0 8rpx 32rpx rgba(45, 95, 63, 0.15);
}

.tier-card-pro {
  border-color: #2D5F3F;
}

.tier-card-master {
  border-color: #1F2937;
  background: linear-gradient(135deg, #FFFFFF 0%, #F9FAFB 100%);
}

.tier-badge {
  position: absolute;
  top: -12rpx;
  right: 32rpx;
  padding: 8rpx 24rpx;
  background: #2D5F3F;
  color: white;
  font-size: 24rpx;
  border-radius: 24rpx;
  font-weight: bold;
}

.tier-badge-master {
  background: linear-gradient(135deg, #1F2937 0%, #374151 100%);
}

.tier-header {
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin-bottom: 24rpx;
}

.tier-icon {
  font-size: 64rpx;
}

.tier-info {
  flex: 1;
}

.tier-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #1F2937;
  margin-bottom: 8rpx;
}

.tier-price {
  font-size: 40rpx;
  font-weight: bold;
  color: #2D5F3F;
}

.price-unit {
  font-size: 24rpx;
  font-weight: normal;
  color: #6B7280;
}

.tier-features {
  margin-bottom: 24rpx;
}

.feature-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 12rpx 0;
  font-size: 28rpx;
  color: #4B5563;
}

.feature-icon {
  color: #2D5F3F;
  font-weight: bold;
  font-size: 32rpx;
}

.tier-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
}

.tier-btn-free {
  background: #E5E7EB;
  color: #6B7280;
}

.tier-btn-pro {
  background: linear-gradient(135deg, #2D5F3F 0%, #1F4529 100%);
  color: white;
}

.tier-btn-master {
  background: linear-gradient(135deg, #1F2937 0%, #374151 100%);
  color: white;
}

/* Comparison Section */
.comparison-section {
  padding: 40rpx 32rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #1F2937;
  margin-bottom: 24rpx;
}

.comparison-table {
  background: white;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.comparison-row {
  display: flex;
  border-bottom: 1rpx solid #E5E7EB;
}

.comparison-row:last-child {
  border-bottom: none;
}

.comparison-header {
  background: #F9FAFB;
  font-weight: bold;
}

.comparison-cell {
  flex: 1;
  padding: 24rpx 16rpx;
  font-size: 24rpx;
  text-align: center;
  color: #4B5563;
}

.comparison-feature {
  text-align: left;
  font-weight: 500;
  color: #1F2937;
}

/* FAQ Section */
.faq-section {
  padding: 40rpx 32rpx;
}

.faq-item {
  margin-bottom: 16rpx;
  background: white;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.faq-question {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 28rpx 32rpx;
  font-size: 28rpx;
  font-weight: 500;
  color: #1F2937;
}

.faq-arrow {
  font-size: 40rpx;
  color: #9CA3AF;
  transition: transform 0.3s;
}

.faq-arrow.expanded {
  transform: rotate(90deg);
}

.faq-answer {
  max-height: 0;
  overflow: hidden;
  transition: max-height 0.3s;
  padding: 0 32rpx;
  font-size: 26rpx;
  color: #6B7280;
  line-height: 1.6;
}

.faq-answer.show {
  max-height: 500rpx;
  padding: 0 32rpx 28rpx;
}
