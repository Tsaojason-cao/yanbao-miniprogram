/**camera.wxss**/
.container {
  padding: 0;
  height: 100vh;
  background: #000000;
}

.camera-view {
  width: 100%;
  height: 100vh;
  position: relative;
}

/* 顶部控制栏 */
.camera-controls-top {
  position: absolute;
  top: 40rpx;
  left: 0;
  right: 0;
  display: flex;
  justify-content: space-around;
  padding: 0 40rpx;
  z-index: 10;
}

.control-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #FFFFFF;
}

.control-icon {
  font-size: 48rpx;
  margin-bottom: 8rpx;
}

.control-label {
  font-size: 24rpx;
  opacity: 0.8;
}

/* 相机参数 */
.camera-params {
  position: absolute;
  top: 140rpx;
  left: 40rpx;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  z-index: 10;
}

.param-item {
  background: rgba(0, 0, 0, 0.5);
  color: #FFFFFF;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  backdrop-filter: blur(10rpx);
}

/* 美颜滑块 */
.beauty-slider {
  position: absolute;
  bottom: 280rpx;
  left: 40rpx;
  right: 40rpx;
  z-index: 10;
}

.slider-label {
  color: #FFFFFF;
  font-size: 28rpx;
  margin-bottom: 16rpx;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.5);
}

.slider-value {
  color: #FFFFFF;
  font-size: 24rpx;
  text-align: right;
  margin-top: 8rpx;
}

/* 底部控制栏 */
.camera-controls-bottom {
  position: absolute;
  bottom: 80rpx;
  left: 0;
  right: 0;
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 0 80rpx;
  z-index: 10;
}

.gallery-btn,
.mode-btn {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(10rpx);
  display: flex;
  align-items: center;
  justify-content: center;
}

.gallery-icon,
.mode-icon {
  font-size: 48rpx;
}

.shutter-btn {
  width: 144rpx;
  height: 144rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.3);
  backdrop-filter: blur(10rpx);
  display: flex;
  align-items: center;
  justify-content: center;
  border: 6rpx solid #FFFFFF;
}

.shutter-btn:active {
  transform: scale(0.9);
}

.shutter-inner {
  width: 112rpx;
  height: 112rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #EC4899 0%, #8B5CF6 100%);
}

/* 模式选择器 */
.mode-selector {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 100;
}

.mode-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.7);
}

.mode-panel {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: #FFFFFF;
  border-radius: 32rpx 32rpx 0 0;
  padding: 40rpx;
  animation: slideUp 0.3s;
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

.mode-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #333333;
  margin-bottom: 32rpx;
  text-align: center;
}

.mode-list {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}

.mode-item {
  background: #F5F5F5;
  border-radius: 16rpx;
  padding: 32rpx;
  text-align: center;
  transition: all 0.3s;
}

.mode-item.active {
  background: linear-gradient(135deg, #EC4899 0%, #8B5CF6 100%);
}

.mode-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
}

.mode-item.active .mode-name {
  color: #FFFFFF;
}
