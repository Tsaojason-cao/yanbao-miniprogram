/* pages/camera/camera.wxss - Leica 极简风格 */

.camera-container {
  width: 100vw;
  height: 100vh;
  position: relative;
  background: #000000;
}

.camera-viewfinder {
  width: 100%;
  height: 95vh;
}

.top-toolbar {
  position: absolute;
  top: 60rpx;
  left: 0;
  right: 0;
  display: flex;
  justify-content: space-between;
  padding: 0 40rpx;
  z-index: 10;
}

.tool-icon {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(0, 0, 0, 0.3);
  backdrop-filter: blur(20rpx);
  border-radius: 50%;
}

.icon {
  font-size: 40rpx;
  color: #FFFFFF;
  font-weight: 300;
}

.master-carousel {
  position: absolute;
  bottom: 200rpx;
  left: 0;
  right: 0;
  z-index: 10;
}

.master-scroll {
  white-space: nowrap;
  padding: 0 40rpx;
}

.master-item {
  display: inline-block;
  padding: 16rpx 32rpx;
  margin-right: 24rpx;
}

.master-item.active .master-abbr {
  color: #FFFFFF;
  font-weight: 400;
  font-size: 32rpx;
}

.master-abbr {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.5);
  font-weight: 200;
  letter-spacing: 2rpx;
}

.shutter-container {
  position: absolute;
  bottom: 80rpx;
  left: 50%;
  transform: translateX(-50%);
  z-index: 10;
}

.shutter-button {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  border: 6rpx solid #FFFFFF;
  display: flex;
  align-items: center;
  justify-content: center;
}

.shutter-button:active {
  transform: scale(0.9);
}

.shutter-inner {
  width: 110rpx;
  height: 110rpx;
  border-radius: 50%;
  background: #FFFFFF;
}

.bottom-hint {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 5vh;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(0, 0, 0, 0.8);
}

.hint-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
}

.adjustment-panel {
  position: fixed;
  bottom: -100%;
  left: 0;
  right: 0;
  height: 80vh;
  background: rgba(0, 0, 0, 0.95);
  border-radius: 40rpx 40rpx 0 0;
  padding: 40rpx;
  transition: bottom 0.4s ease;
  z-index: 100;
}

.adjustment-panel.show {
  bottom: 0;
}

.right-toolbar {
  position: absolute;
  right: 40rpx;
  top: 50%;
  transform: translateY(-50%);
  display: flex;
  flex-direction: column;
  gap: 32rpx;
  z-index: 10;
}

.tool-icon-small {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(0, 0, 0, 0.3);
  backdrop-filter: blur(20rpx);
  border-radius: 50%;
}

.icon-small {
  font-size: 32rpx;
  color: #FFFFFF;
}
