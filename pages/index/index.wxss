/**index.wxss**/
.container {
  padding: 0;
}

/* Hero Section */
.hero-section {
  background: linear-gradient(135deg, #8B5CF6 0%, #EC4899 100%);
  padding: 80rpx 40rpx 60rpx;
  text-align: center;
  color: #FFFFFF;
}

.hero-logo {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 24rpx;
}

.hero-title {
  font-size: 56rpx;
  font-weight: 700;
  margin-bottom: 16rpx;
}

.hero-subtitle {
  font-size: 28rpx;
  opacity: 0.9;
  margin-bottom: 32rpx;
}

.hero-tags {
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
  gap: 16rpx;
}

.hero-tags .tag {
  background: rgba(255, 255, 255, 0.2);
  color: #FFFFFF;
  backdrop-filter: blur(10rpx);
}

/* Section Title */
.section-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #333333;
  padding: 40rpx 32rpx 24rpx;
}

/* Features Grid */
.features-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
  padding: 0 32rpx 40rpx;
}

.feature-card {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 40rpx 24rpx;
  text-align: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  transition: transform 0.3s;
}

.feature-card:active {
  transform: scale(0.95);
}

.feature-icon {
  font-size: 64rpx;
  margin-bottom: 16rpx;
}

.feature-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 8rpx;
}

.feature-desc {
  font-size: 24rpx;
  color: #999999;
}

/* Spots List */
.spots-list {
  padding: 0 32rpx 40rpx;
}

.spot-card {
  background: #FFFFFF;
  border-radius: 24rpx;
  margin-bottom: 24rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.spot-image {
  width: 100%;
  height: 360rpx;
}

.spot-info {
  padding: 24rpx;
}

.spot-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 12rpx;
}

.spot-meta {
  display: flex;
  gap: 24rpx;
  margin-bottom: 12rpx;
}

.spot-rating,
.spot-distance {
  font-size: 24rpx;
  color: #666666;
}

.spot-time {
  font-size: 24rpx;
  color: #999999;
}

/* Quick Actions */
.quick-actions {
  padding: 0 32rpx 40rpx;
  display: flex;
  gap: 24rpx;
}

.quick-actions button {
  flex: 1;
}
