/* pages/engineering/engineering.wxss */
.engineering-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #1F4529 0%, #2D5F3F 100%);
  padding: 40rpx 32rpx 120rpx;
}

/* 头部 */
.header {
  text-align: center;
  margin-bottom: 60rpx;
}

.title {
  font-size: 48rpx;
  font-weight: 700;
  color: #FFFFFF;
  margin-bottom: 16rpx;
}

.subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.7);
}

/* 区块 */
.section {
  margin-bottom: 48rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #FFFFFF;
  margin-bottom: 24rpx;
}

/* 品牌故事卡片 */
.story-card {
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(20rpx);
  border-radius: 24rpx;
  padding: 40rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.story-text {
  font-size: 28rpx;
  line-height: 48rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 24rpx;
}

.story-text:last-child {
  margin-bottom: 0;
}

.story-text.philosophy {
  text-align: center;
  margin: 32rpx 0;
  font-size: 32rpx;
}

.highlight {
  color: #FFFFFF;
  font-weight: 700;
}

.bold {
  font-weight: 700;
  color: #FFFFFF;
}

/* 调试卡片 */
.debug-card {
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(20rpx);
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.debug-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.1);
}

.debug-item:last-child {
  border-bottom: none;
}

.debug-label {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.7);
}

.debug-value {
  font-size: 28rpx;
  color: #FFFFFF;
  font-weight: 500;
}

/* 调试开关 */
.debug-switch {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.1);
}

.debug-switch:last-child {
  border-bottom: none;
}

/* 快捷操作按钮 */
.action-buttons {
  display: flex;
  gap: 16rpx;
  margin-top: 24rpx;
}

.action-btn {
  flex: 1;
  background: rgba(255, 255, 255, 0.15);
  color: #FFFFFF;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 16rpx;
  font-size: 26rpx;
  padding: 24rpx 0;
  transition: all 0.3s ease;
}

.action-btn:active {
  background: rgba(255, 255, 255, 0.25);
  transform: scale(0.98);
}

/* 关闭按钮 */
.close-btn {
  position: fixed;
  bottom: 40rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 200rpx;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(20rpx);
  border-radius: 40rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  color: #FFFFFF;
  font-size: 28rpx;
  font-weight: 500;
  transition: all 0.3s ease;
}

.close-btn:active {
  background: rgba(255, 255, 255, 0.3);
  transform: translateX(-50%) scale(0.95);
}
