/**app.wxss**/
page {
  background-color: #F5F5F5;
  font-family: -apple-system-font, "Helvetica Neue", "PingFang SC", "Hiragino Sans GB", "Microsoft YaHei", sans-serif;
}

/* 全局容器 */
.container {
  min-height: 100vh;
  padding: 20rpx;
  box-sizing: border-box;
}

/* 卡片样式 */
.card {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

/* 按钮样式 */
.btn-primary {
  background: linear-gradient(135deg, #EC4899 0%, #8B5CF6 100%);
  color: #FFFFFF;
  border-radius: 48rpx;
  padding: 24rpx 48rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
}

.btn-secondary {
  background: rgba(139, 92, 246, 0.1);
  color: #8B5CF6;
  border-radius: 48rpx;
  padding: 24rpx 48rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: 2rpx solid #8B5CF6;
}

/* 标题样式 */
.title {
  font-size: 48rpx;
  font-weight: 700;
  color: #333333;
  margin-bottom: 16rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #999999;
  margin-bottom: 32rpx;
}

/* 图标样式 */
.icon {
  width: 48rpx;
  height: 48rpx;
}

.icon-large {
  width: 96rpx;
  height: 96rpx;
}

/* 分隔线 */
.divider {
  height: 1rpx;
  background: #E5E5E5;
  margin: 32rpx 0;
}

/* 标签样式 */
.tag {
  display: inline-block;
  padding: 8rpx 24rpx;
  border-radius: 24rpx;
  font-size: 24rpx;
  margin-right: 16rpx;
}

.tag-primary {
  background: rgba(236, 72, 153, 0.1);
  color: #EC4899;
}

.tag-purple {
  background: rgba(139, 92, 246, 0.1);
  color: #8B5CF6;
}

/* 加载状态 */
.loading {
  text-align: center;
  padding: 80rpx 0;
  color: #999999;
}

/* 空状态 */
.empty {
  text-align: center;
  padding: 120rpx 0;
}

.empty-icon {
  font-size: 120rpx;
  color: #CCCCCC;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999999;
}
